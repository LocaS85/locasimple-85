
{
  "include": ["vite.config.ts", "src/**/*.ts", "src/**/*.tsx"],
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "moduleResolution": "node"
  }
}
